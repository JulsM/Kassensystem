<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="89dp">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/numPadBtn_7"
            style="@style/NumPadBtn"
            android:text="7"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/numPadBtn_8"
            style="@style/NumPadBtn"
            android:text="8"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/numPadBtn_9"
            style="@style/NumPadBtn"
            android:text="9"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/numPadBtn_cancel"
            style="@style/NumPadBtn"
            android:text="C"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/numPadBtn_4"
            style="@style/NumPadBtn"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/numPadBtn_5"
            style="@style/NumPadBtn"
            android:text="5"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/numPadBtn_6"
            style="@style/NumPadBtn"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/numPadBtn_X"
            style="@style/NumPadBtn"
            android:text="C"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/numPadBtn_1"
            style="@style/NumPadBtn"
            android:text="1"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/numPadBtn_2"
            style="@style/NumPadBtn"
            android:text="2"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/numPadBtn_3"
            style="@style/NumPadBtn"
            android:text="3"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/numPadBtn_Y"
            style="@style/NumPadBtn"
            android:text="C"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/numPadBtn_0"
            style="@style/NumPadBtn"
            android:text="0"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/numPadBtn_00"
            style="@style/NumPadBtn"
            android:text="00"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/numPadBtn_point"
            style="@style/NumPadBtn"
            android:text=","
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/numPadBtn_Z"
            style="@style/NumPadBtn"
            android:text="C"
            app:layout_column="3"
            app:layout_row="3" />


    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="187dp"
        android:layout_height="28dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="214dp" />

</android.support.constraint.ConstraintLayout>